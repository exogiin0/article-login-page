<section class=" my-4 mx-5">
  <div class="container">
    <div class="row no-gutters">
      <div class="col-lg-5 ">
        <img src="../public/images/login-img.jpg" class="img-fluid" alt="">
      </div>
      <div class="col-lg-7 px-5 pt-5">
        <h2>Login</h2>
        <%- include('./partials/messages') %>
        <form action="/users/login" method="post">
          <div class="form-row">
            <div class="col-lg-7">
              <input type="email" name="email" id="email" placeholder="Email"
                     class="form-control my-3 p-4" required >
            </div>
          </div>
          <div class="form-row">
            <div class="col-lg-7">
              <input type="password" name="password" id="password" placeholder="Password"
                     class="form-control my-3 p-4" required >
            </div>
          </div>
          <div class="form-row">
            <div class="col-lg-7">
              <button type="submit" class="login-btn mt-3 mb-5">Sign in</button>
            </div>
          </div>
          <a href="#" >Forgot Password</a>
          <p class="mt-3">Don't have an account? <a href="/users/register">Register</a></p>
        </form>
      </div>
    </div>
  </div>
</section>
